{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "help",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [ "--help" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/dist/tools",
            //"cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    "name": "SOME_VALUE",
                    "value": "Something something"
                }
            ]
            //"console": "externalTerminal"
        },
        {
            "name": "run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [ "--path_to_client", "./client", "--port", "12345" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/temp"
        }
    ]
}
