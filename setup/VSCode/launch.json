{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "run server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--path_to_client",
                    //"${workspaceFolder}/temp/zzz.sbt-client",
                    "fast/int8_if_x_equal_c.sbt-client",
                "--max_executions", "1000000",
                "--max_seconds", "30",
                "--max_trace_size", "10000",
                "--max_stdin_bits", "6400",
                "--test_type",
                    "debug",
                    // "sbt-eft",
                    // "testcomp",
                "--port", "45654",
                "--output_dir", "${workspaceFolder}/dist/output"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/dist/benchmarks",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "kill clients",
            //"postDebugTask": "kill clients"
        },
        {
            "name": "Benman @ dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dist/benchmarks/benman.py",
            "console": "integratedTerminal",
            "args": [ "--verbose", "--clear",
                "fast/int8_if_x_equal_c.c"
            ],
            "cwd": "${workspaceFolder}/dist",
            "justMyCode": true
        }
    ]
}