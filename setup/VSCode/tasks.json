{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Benman",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/dist/benchmarks"
            },
            "args": [ "${workspaceFolder}/benchmarks/benman.py",
                // "--verbose",
                "--clear",
                "--build",
                "--fuzz",
                "--input",
                    // "all"
                    "fast"
                    // "medium"
                    // "slow"
                    // "pending"

                    // "fast/c_string_count_chars.c"
                    // "fast/c_string_parse_two_ints.c"

                // , ">", "./dist/benchmarks/benman_output.txt"
            ]
        },
        {
            "label": "salat.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "options": {
                "cwd": "${workspaceFolder}/dist/benchmarks/salatd"
            },
            "args": [
                "salat.py",
                "--salac_dir", "../../tools/salac",
                "--salat_dir", "../../tools/salat",
                "--output_dir", "../../output",
                // "--verbose",
                "--input",
                    //"compile"
                    //"interpret"
                    "inputflow"
            ]
        },
        {
            "label": "kill clients",
            "type": "shell",
            "linux": {
                "command": "pgrep --full \"_sbt-fizzer_target\" | xargs -r kill"
            },
            "windows": {
                "command": "TODO"
            }
        },
        {
            "label": "clean dist",
            "type": "shell",
            "command": "rm -Rf *.html *_CRASH.txt *.gcov ./output ../output",
            "options": {
                "cwd": "${workspaceFolder}/dist/benchmarks"
            }
        },
        {
            "label": "TestCov",
            "type": "shell",
            "command": "testcov",
            "dependsOrder": "sequence",
            "dependsOn": [ "zip tests" ],
            "options": {
                "cwd": "${workspaceFolder}/dist/benchmarks"
            },
            "args": [ "--no-isolation", "--test-suite", "../output/test-suite/tests.zip",
                "fast/_.c"
            ]
        },
        {
            "label": "zip tests",
            "type": "shell",
            "command": "zip -r tests.zip ./*.xml",
            "options": {
                "cwd": "${workspaceFolder}/dist/output/test-suite"
            }
        }
    ]
}
